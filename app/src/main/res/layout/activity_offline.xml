<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apex.bloodstory.offline">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name :"
        android:id="@+id/textView6"
        android:layout_marginTop="89dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#e72222" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address :"
        android:id="@+id/textView40"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:textColor="#e72222" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Blood group :"
        android:id="@+id/textView49"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textColor="#e72222" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText17"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Name"
        android:textColor="#e72222" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText18"
        android:layout_below="@+id/textView40"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Address"
        android:textColor="#e72222" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText19"
        android:layout_below="@+id/textView49"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Blood Group"
        android:textColor="#e72222" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send SmS"
        android:id="@+id/button19"
        android:layout_below="@+id/editText19"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:background="#e72222" />
</RelativeLayout>
